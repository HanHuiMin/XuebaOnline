{% extends "base.djhtml" %}

{% block title %} Accounts Home {% endblock %}

{% block body %}

  {% if user %}
    <div>
    {% include "post_signin_header.djhtml" %}
  </div>
  {% else %}
    <div>
    {% include "pre_signin_header.djhtml" %}
    </div>
  {% endif %}

  {% load staticfiles %}

  <div class="pushter">

    <!--These Code Should be deleted and be exchanged with css-->
    <!--Top Menu Different from Fixed-->
    <!--Just load for location-->
    <div class="ui stackable inverted menu">
      <div class="ui container">
        <a class="active item">Home</a>
        <a class="item">Course</a>
        <a class="item">Questions</a>
        <a class="item">Robot</a>
        
        <div class="right item">
          <div class="ui two column very relaxed grid">
            <div class="column">
              <button class="ui inverted orange button">register</button>
            </div>
            <div class="ui inverted vertical divider"> Or </div>
            <div class="column">
              <button class="ui inverted purple button">login</button>
            </div>
          </div>
        </div>
      
      </div>
    </div>

    <div class="ui grid">
      <div class="row">
        <div class="four wide column"></div>
        <div class="two wide column">
          <div class="content">
            <img class="left floated tiny ui image" src="{% static 'SearchLogo.jpg' %}">
          </div>
        </div>
        <div class="five wide column">
          <div class="ui vertical segment">
            <div class="ui fluid search">
              <div class="ui icon fluid input" style="margin-left: 1em; margin-right: 1em;">
                <input class="prompt" placeholder="Search..." type="text">
                <i class="search icon"></i>
              </div>
              <div class="results"></div>
            </div>
          </div>
        </div>
        <div class="five wide middle aligned column">
          <button class="ui blue basic button">
            <i class="icon tag"></i>
            Search
          </button>
        </div>
      </div>

      <div class="row">
        <div class="two wide column"></div>
        <div class="eight wide column">
          <div class="ui blue segment">
            <div class="row">
              <div class="ui container">
                <div class="row">
                  <div class="ui label">Title</div>
                  <div class="ui input">
                    <input type="text" placeholder="Input the title of question">
                  </div>
                </div>
                <div class="row">
                  <div class="field">
                    <textarea rows="6" placeholder="Input details of such question"></textaera>
